<%- include('../includes/head.ejs') %>
<h2 class="text-center">Product Details</h2>

<main>
    <section class="products"">
        <% if (product) { %>
            <div class=" row">
                <div class="col"></br></div>

                <div class="col-8"></br>
                    <div class="card text-center">
                        <div class="card-header">
                            No.<%= product.id %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <% if (product.images) { %> 
                                <img src="/resources/<%= product.images %>" alt="<%= product.name %>" class="mx-auto" style="display: block; max-height:300px; margin:10px;"> 
                            <% } else  { %>
                                <img src="/images/product-default.png" alt="<%= product.name %>">
                            <% } %> 
                            <p class="btn btn-primary"><%= product.price %>$</p>
                        </div>
                        <div class="card-footer text-muted">
                            <a href="/categories/<%= product.category %>">Category: <%= product.category %></a> 
                        </div>
                    </div>
                    
                </div>

                <div class="col"></br></div>
            </div>
        <% } else { %>
            <h1>No product</h1>
        <% } %>
    </section>
</main>
<%- include('../includes/end.ejs') %>